        <script type="text/javascript" src="https://code.jquery.com/jquery-2.2.4.js"></script>
        <script type="text/javascript" src="jquery.ajax-cross-origin.min.js"></script>
        <style>
            *{
                margin: 0 auto;
            }
            
            .card{
                padding: 20px 20px;
                background: white;
                margin: 10px auto;
                width: 50%;
                box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.3);
            }
        </style>
        <script type="text/javascript">
            
            $(document).ready(function(){
                $.get("/hyubamboo", function(response) {
                    for(var i = 0; i < response.post_data.data.length; i++){
                        
                        var msg = response.post_data.data[i].message;
                        var comment_count = response.comment_data[i].data.length;
                        var comment_box = $('<div>').html('</br>');
                        
                        for(var j = 0; j < comment_count; j++){
                            comment_box.append($('<h6>').html(response.comment_data[i].data[j].message+'</br></br>'));
                        }
                        
                        $('#test').append(
                            $('<div>').addClass('card').html(msg.replace(/\n/gi,"</br>")).append(comment_box)
                        );
                        
                    }
                    
                    
                })    
            })
            
        </script>
        
    </head>
    <body>
        <div id="test">
        </div>
        
    </body>
